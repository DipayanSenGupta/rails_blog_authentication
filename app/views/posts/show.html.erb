<div id="post_content">
<h1 class="titile">
	<%= @post.title %>
</h1>

<p class="date">
	Submitted <b><%= time_ago_in_words(@post.created_at) %> </b> ago | 
	<%= link_to 'Edit', edit_post_path(@post) %>
	<%= link_to "Delete", @post, :method => :delete, :confirm => "Are you sure ?"%>
</p>

<p class="body">
	<%= @post.body %>
</p>
</div>