<div id="post_content">
<h1 class="titile">
	<%= @post.title %>
</h1>

<p class="date">

<% if user_signed_in?%>

	Submitted <b><%= time_ago_in_words(@post.created_at) %> </b> ago | 
	<%= link_to 'Edit', edit_post_path(@post) %>
				|
<%= link_to 'Delete', @post,
			method: :delete,
			data: {confirm: 'Are you sure ?'}
			%>
<%end%>
</p>

<p class="body">
	<%= @post.body %>
</p>

<div id="comments">
	<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

		<% if user_signed_in?%>

		<h3>Add a comment :</h3>
		<%= render "comments/form" %>
		
		<%end%>	
	</div>
</div>